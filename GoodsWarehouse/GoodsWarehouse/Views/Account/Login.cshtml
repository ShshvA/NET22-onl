@using System.ComponentModel.DataAnnotations
@{
    ViewData["Title"] = "Login";
}

@model GoodsWarehouse.VM.LoginVM

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="border border-primary p-3 border-2 rounded-3">
            <form asp-controller="Account" asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="Имя пользователя" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Подтвердить</button>
                <a asp-controller="Account" asp-action="Register" class="btn btn-link">Регистрация</a>

                <div class="mt-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>                
            </form>
        </div>
    </div>
</div>

